{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": ["lib/RepackedFramework/Framework/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "lib/Core/*.ts",
    "lib/RepackedFramework/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
